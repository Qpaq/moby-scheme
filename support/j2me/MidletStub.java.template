	protected void keyPressed(int keyCode) {
	    Object aKey;
	    if (stopped) { return; }
	    switch(getGameAction(keyCode)) {
	    case Canvas.LEFT: aKey = "left"; break;
	    case Canvas.RIGHT: aKey = "right"; break;
	    case Canvas.UP: aKey = "up"; break;
